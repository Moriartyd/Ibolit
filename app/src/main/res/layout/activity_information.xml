<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dima.mdbloader.InformationActivity"
    android:baselineAligned="false">


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textName"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:textSize="24sp"
        android:lineSpacingExtra="10sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textForm"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textSubst"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textPrice"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/rBar" />

    <Button
        android:text="Search for analogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_analog"
        android:onClick="AnalogClick"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />
</LinearLayout>
